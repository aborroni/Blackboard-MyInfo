<?xml version="1.0" encoding="ISO-8859-1"?>
<manifest>
  <!-- core extension information -->
  <plugin>
    <name value= "OCTET - Your Info"/>
    <handle value= "YourInfo"/>
    <description value= "Displays info stored and used in Blackboard."/>
    <version value= "2.0"/>
    <requires>
    	<bbversion value="3000.1.1-rel.20+6fbf7f6"/>
    </requires>
    <vendor>
      <id value="octt"/>
      <name value="OCTET"/>
      <url value="http://octet.oberlin.edu" />
      <description value="Oberlin Center for Technologically Enhanced Teaching." />
    </vendor>
    <http-actions>
      <remove value="admin/remove.jsp"/>
    </http-actions>
   
		<module-defs>
			<module-type ext-ref="YourInfo" title="Your Info" uicreatable="true">
			<jsp-dir>links</jsp-dir>
			<jsp>
				<view>info.jsp</view>
			</jsp>
			</module-type>
			<module type="YouInfo" isadmin="false" useraddable="true" isdeletable="true" isdetachable="true" title="Your Info">
				<description format="S"></description>
				<ExtraInfo/>
				<module-groups>
					<module-group id="everyone"/>
				</module-groups>
			</module>
		</module-defs>
	<permissions>
        <permission type="attribute" name="user.authinfo" actions="get" />
        <permission type="attribute" name="user.personalinfo" actions="get" />
		    <permission type="persist" name="Content" actions="create,modify,delete"/>
  	</permissions>
  </plugin>

</manifest>
